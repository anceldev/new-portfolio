---
import { getLangFromUrl } from "../i18n/utils";
import { content } from "../utils/content";
import "@fontsource-variable/fira-code";
import "@fontsource-variable/open-sans";

const lang = getLangFromUrl(Astro.url);
const text = content[lang];
---

<footer class="px-40 mb-20">
  <h1 class="text-dirtyWhite font-firacode text-xl lg:text-3xl text-right pr-40">
    {`.../${text.contact.title}...`}
  </h1>
  <div class="flex flex-row mt-12">
    <div class="size-3/5">
      <h1 class="text-7xl font-firacode text-dirtyWhite">Ancel</h1>
      <div class="flex flex-row mt-2">
        <div
          class="flex flex-col text-lightGray pr-8 justify-center font-opensans text-xl"
        >
          <p>{text.header.title1}</p>
          <p>{text.header.title2}</p>
        </div>
        <h1 class="text-7xl font-firacode text-dirtyWhite">Guarayo</h1>
      </div>
    </div>
    <div class="size-2/5">
      <div class=" flex flex-col border border-darkGray rounded-[30px] p-8 text-dirtyWhite text-2xl font-firacode space-y-8 font-thin">
        <a href={`tel:+34 ${text.contact.tel}`} class="hover:text-lightGray hover:underline transition-all delay-150">{text.contact.tel}</a>
        <a href={`mailto:${text.contact.mail}`} class="hover:text-lightGray hover:underline transition-all delay-150">{text.contact.mail}</a>
      </div>
    </div>
  </div>
</footer>

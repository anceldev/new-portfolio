---
import { getLangFromUrl } from "../i18n/utils";
import { content } from "../utils/content";

const lang = getLangFromUrl(Astro.url);
const text = content[lang]
---
<div class="flex flex-col lg:flex-row justify-between mx-8 lg:mx-40 space-y-8">
  <h3 class="text-dirtyWhite font-firacode text-lg size-1/2">{`.../${text.about.title}...`}</h3>
  <p class="text-lightGray text-xl font-light font-opensans lg:text-2xl lg:size-1/2">{text.about.description}</p>
</div>